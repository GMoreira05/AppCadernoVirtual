<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual.Primeiro.InicialPrimeiro"
             Title="1º E.M. - Matérias" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista de Matérias do 1º E.M."
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Português" x:Name="BtnPortugues" Clicked="BtnPortugues_Clicked" />
            <Button Text="Inglês" x:Name="BtnIngles" Clicked="BtnIngles_Clicked" />
            <Button Text="Geografia" x:Name="BtnGeografia" Clicked="BtnGeografia_Clicked" />
            <Button Text="História" x:Name="BtnHistoria" Clicked="BtnHistoria_Clicked" />
            <Button Text="Física" x:Name="BtnFisica" Clicked="BtnFisica_Clicked" />
            <Button Text="Química" x:Name="BtnQuimica" Clicked="BtnQuimica_Clicked" />
            <Button Text="Biologia" x:Name="BtnBiologia" Clicked="BtnBiologia_Clicked" />
            <Button Text="Filosofia" x:Name="BtnFilosofia" Clicked="BtnFilosofia_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>